{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "nandinikodipunzula/multi-container-project-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "nandinikodipunzula/multi-container-project-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "nandinikodipunzula/multi-container-project-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "nandinikodipunzula/multi-container-project-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [{
                "hostPort": 80,
                "containerPost": 80
            }
            ],
            "links":["client","server"]
        }
    ]
}